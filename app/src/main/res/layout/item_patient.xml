<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/ln_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5dp"
        android:weightSum="5">


        <TextView
            android:id="@+id/tvPatientId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Patient ID"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvSurgeryId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Surgery ID"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvSurgeryDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date of Surgery"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_hidden"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date of Surgery"
            android:textAlignment="center"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvSurgeryStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Surgery Status"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actions"
            android:textAlignment="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

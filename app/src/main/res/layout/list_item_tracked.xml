<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/item_cases_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/hiddenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@color/white"
                    android:gravity="start">

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/patient_id" />

                    <TextView
                        android:id="@+id/tv_patient_id"
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/patient_id"
                        android:textAlignment="textStart" />

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/id_doc_no" />

                    <TextView
                        android:id="@+id/tv_id_doc_no"
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/patient_id"
                        android:textAlignment="textStart" />


                </TableRow>

                <TableRow
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@color/white"
                    android:gravity="start">

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/hospital_no" />

                    <TextView
                        android:id="@+id/tv_hospital_no"
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/patient_id" />

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/phone_no" />

                    <TextView
                        android:id="@+id/tv_phone_no"
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/phone_no" />


                </TableRow>

                <TableRow
                    android:layout_marginBottom="@dimen/_0dp"
                    android:background="@color/white"
                    android:gravity="start">

                    <TextView
                        style="@style/txtFeatureName"
                        android:text="@string/place_of_notification" />

                    <TextView
                        android:id="@+id/tv_place_of_notification"
                        style="@style/txtfeatureNameStyle"
                        android:text="@string/place_of_notification" />

                    <TextView
                        android:id="@+id/tv_patient_name"
                        style="@style/txtFeatureName"
                        android:text="@string/place_of_notification"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_patient_name_alt"
                        style="@style/txtFeatureName"
                        android:text="@string/place_of_notification"
                        android:visibility="invisible" />

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/ln_next_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_15dp">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_proceed"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proceed"
                    android:textAllCaps="false"
                    app:icon="@drawable/proceed"
                    app:iconGravity="textEnd"
                    app:iconSize="@dimen/_20dp" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyish"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>